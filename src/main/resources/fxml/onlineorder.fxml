<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/onlineorder.css" />

   </stylesheets>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <Label text="Online ordering">
               <padding>
                  <Insets left="250.0" />
               </padding>
            </Label>
         </items>
      </ToolBar>
   </top>
   <left>
      <ImageView fitHeight="337.0" fitWidth="216.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../images/medicine.jpg" />
         </image>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </ImageView>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Medicine:">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="medicineName" textFill="#1600a4">
               <padding>
                  <Insets left="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
            </Label>
            <Label text="Price:">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="medicinePrice" textFill="#1600a4">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding></Label>
            <Label text="Quantity:">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="medicineQuantity" textFill="#1600a4">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding></Label>
            <Label text="Description:">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="medicineDescription" textFill="#1600a4">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding></Label>
            <Label text="Adress:">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <TextField fx:id="addressName" />
            <Label prefHeight="36.0" prefWidth="341.0" text="Are you sure that you want to order this medicine?" textFill="#00dd1e">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="45.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Button fx:id="btnYes" defaultButton="true" mnemonicParsing="false" onAction="#confirm" styleClass="buttonss" text="Yes">
               <VBox.margin>
                  <Insets bottom="5.0" left="170.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#cancelAction" styleClass="buttonss" text="Cancel" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Button>
   </bottom>

</BorderPane>
