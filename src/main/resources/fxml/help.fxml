<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@/css/help.css" />

    </stylesheets>
    <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <ImageView fitHeight="35.0" fitWidth="67.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
         </items>
      </ToolBar>
   </top>
   <bottom>
      <HBox prefHeight="45.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <ButtonBar prefHeight="45.0" prefWidth="589.0">
              <buttons>
                <Button fx:id="btnClose" minWidth="26.0" mnemonicParsing="false" onAction="#closeHelp" prefHeight="37.0" styleClass="close" text="Close">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
              </buttons>
            </ButtonBar>
         </children>
      </HBox>
   </bottom>
   <left>
      <ImageView fitHeight="311.0" fitWidth="213.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../images/medicine.jpg" />
         </image>
      </ImageView>
   </left>
   <center>
      <ImageView fitHeight="265.0" fitWidth="385.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../images/help.PNG" />
         </image>
      </ImageView>
   </center>
</BorderPane>
